<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>后台管理系统</title>
  <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/common.css">
  <!-- <link rel="stylesheet" href="/css/index.css"> -->
  <link rel="stylesheet" href="/css/phone.css">
  <script src="/js/public.js"></script>
  
</head>
<body>
  <div class="container" style="position:relative">

    <%- include('./common/head') %>

    <div class="lv-main">
      <%- include('./common/menu') %>

      <div class="body">
       
         
          <button class="btn btn-primary" id="add">添加品牌</button>
          <form class="form-inline search-bar" method="POST" action="/brand/addBrand" id="brand" enctype="multipart/form-data" style="display:none">
            品牌LOGO：<input type="file" name="lg"><br>
            品牌名称：<input type="text" name="name"><br>         
         
            <input type="submit" value="提交">
  
          </form>

        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>序号</th>
              <th>品牌LOGO</th>
              <th>品牌名称</th>            
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < list.length; i++) {%>
              <tr>
                <th scope="row"><%= i+1 %></th>
                <td><img src="/<%= list[i].lg %>" alt=""></td>
                <td><%= list[i].name %></td>
              
                <td>
                 
                    <a href="/brand/delete?id=<%= list[i]._id %>">删除</a>
              


                </td>
              </tr>
            <%}%>

          </tbody>
        </table>

        <nav>
          <ul class="pagination">
            <li>
              <a href="/brand?page=<%=currentPage-1<1?1:currentPage-1%>&pageSize=<%=pageSize%>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <% for(var i=0;i<totalPage;i++){%>
            <li class="<%= currentPage===(i+1)?'active':"" %>">
              <a href="/brand?page=<%=i+1%>&pageSize=<%=pageSize%>"><%=i+1%></a></li>
            <%}%>

          <!-- 当前页高亮，其他页面就不高亮 -->
            <li>
              <a href="/brand?page=<%= currentPage+1 >totalPage?totalPage:currentPage+1%>&pageSize=<%=pageSize%>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>

    </div>

    <%- include('./common/footer') %>
  </div>
</body>

</html>
<script>
 var add = document.getElementById("add");
  var phone = document.getElementById("brand");
  add.onclick = function () {

phone.style.display = "block";
}








</script>