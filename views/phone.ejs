<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>后台管理系统</title>
  <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/phone.css">

</head>

<body>
  <div class="container" style="position:relative">

    <%- include('./common/head') %>

    <div class="lv-main">
      <%- include('./common/menu') %>

      <div class="body">
        <button class="btn btn-primary" id="add">新增手机</button>
        <form class="form-inline search-bar" method="POST" action="/phone/addPhone" id="phone" enctype="multipart/form-data">
          名称：<input type="text" name="name"><br>
          品牌：<input type="text" name="brand"><br>
          官方指导价：<input type="text" name="formal"><br>
          二手回收价：<input type="text" name="price"><br>
          图片:<input type="file" name="src"><br>
          <input type="submit" value="提交">

        </form>

        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>

              <th>序号</th>
              <th>图片</th>
              <th>手机名称</th>
              <th>所属品牌</th>
              <th>官方指导价</th>
              <th>二手回收价</th>
              <th>操作</th>
            </tr>

          </thead>
          <tbody>
            <% for(var i = 0; i < list.length; i++) {%>
            <tr>
              <th scope="row">
                <%= i+1 %>
              </th>
              <td><img src="<%= list[i].src %>" alt=""></td>
              <td>
                <%= list[i].name %>
              </td>
              <td>
                <%= list[i].brand %>
              </td>
              <td>
                <%= list[i].formal %>
              </td>
              <td>
                <%= list[i].price%>
              </td>
              <td>
                <span class="update" name="id=<%= list[i]._id %>">修改</span>

                
                <a href="/phone/delete?id=<%= list[i]._id %>">删除</a>


              </td>
            </tr>
            <%}%>
         




          </tbody>
        </table>

        <nav>
          <ul class="pagination">
            <li>
              <a href="/users?page=<%=currentPage-1<1?1:currentPage-1%>&pageSize=<%=pageSize%>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <% for(var i=0;i<totalPage;i++){%>
            <li class="<%= currentPage===(i+1)?'active':"" %>">
              <a href="/users?page=<%=i+1%>&pageSize=<%=pageSize%>">
                <%=i+1%></a></li>
            <%}%>

            <!-- 当前页高亮，其他页面就不高亮 -->
            <li>
              <a href="/users?page=<%= currentPage+1 >totalPage?totalPage:currentPage+1%>&pageSize=<%=pageSize%>"
                aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>

    </div>

    <%- include('./common/footer') %>
    <form action="/phone/updata" id="updatePhone" style="display:none">
      <input type="hidden" name="id" >
      名称：<input type="text" name="name"><br>
      品牌：<input type="text" name="brand"><br>
      官方指导价：<input type="text" name="formal"><br>
      二手回收价：<input type="text" name="price"><br>
      <input type="submit" value="确认修改">
    </form>
  </div>
 
</body>

</html>
<script>

  var updatePhone = document.getElementById("updatePhone");
  var update = document.getElementsByClassName("update");
  console.log(update.length);
  var add = document.getElementById("add");
  var phone = document.getElementById("phone");
  var none = document.getElementsByClassName("none");
  add.onclick = function () {

    phone.style.display = "block";
  }
  for(var i=0;i<update.length;i++){
    update[i].onclick = function () {
      console.log("修改手机");
    
    updatePhone.style.display = "block";

  }

    
  }
  


</script>